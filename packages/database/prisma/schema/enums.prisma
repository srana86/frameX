// Tenant & Domain Status
enum TenantStatus {
  ACTIVE
  SUSPENDED
  TRIAL
  INACTIVE
}

enum SSLStatus {
  PENDING // Not yet issued
  ISSUING // Currently being issued
  ACTIVE // Valid certificate installed
  EXPIRING_SOON // Less than 30 days to expiry
  EXPIRED // Certificate has expired
  RENEWAL_FAILED // Renewal attempt(s) failed
  REVOKED // Certificate was revoked
  FAILED // Legacy - issuance failed
}

enum DomainStatus {
  PENDING_VERIFICATION // Waiting for DNS verification
  VERIFICATION_FAILED // DNS check failed
  VERIFIED // DNS verified, ready for SSL issuance
  PROVISIONING // SSL certificate being issued
  ACTIVE // Fully operational with valid SSL
  SUSPENDED // Temporarily disabled by admin
  DELETED // Soft deleted, pending cleanup
}

enum SSLProvider {
  LETS_ENCRYPT // Free ACME certificates (default)
  CLOUDFLARE // Cloudflare origin certificates
  CUSTOM // User-provided certificate
}

enum DomainVerificationMethod {
  DNS_TXT // TXT record verification (recommended)
  DNS_CNAME // CNAME record verification
  HTTP_FILE // HTTP file challenge (automatic with ACME)
}

