# Nginx configuration for {{domain}}
# Generated by multi-tenant-ssl service
# DO NOT EDIT MANUALLY - changes will be overwritten

# =============================================================================
# HTTPS Server Block
# =============================================================================
server {
    # Listen on port 443 with SSL and HTTP/2
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    
    # Domain name(s) this server block handles
    server_name {{domain}}{{#additionalServerNames}} {{.}}{{/additionalServerNames}};

    # =========================================================================
    # SSL CERTIFICATE CONFIGURATION
    # =========================================================================
    # Certificate chain (includes intermediate certs)
    ssl_certificate {{certPath}};
    # Private key
    ssl_certificate_key {{keyPath}};

    # =========================================================================
    # SSL PROTOCOL SETTINGS
    # =========================================================================
    # Only allow TLS 1.2 and 1.3 (secure protocols)
    ssl_protocols TLSv1.2 TLSv1.3;
    
    # Prefer server ciphers over client ciphers
    ssl_prefer_server_ciphers on;
    
    # Strong cipher suite (AEAD ciphers only)
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305;
    
    # SSL session cache (shared across workers)
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    
    # Disable session tickets for forward secrecy
    ssl_session_tickets off;
    
    # OCSP Stapling - improves SSL handshake speed
    ssl_stapling on;
    ssl_stapling_verify on;
    
    # Use Google's DNS for OCSP stapling (or change to your preferred resolver)
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # =========================================================================
    # SECURITY HEADERS
    # =========================================================================
    # Prevent clickjacking by disallowing iframe embedding
    add_header X-Frame-Options "SAMEORIGIN" always;
    
    # Prevent MIME type sniffing
    add_header X-Content-Type-Options "nosniff" always;
    
    # Enable XSS filter (legacy browsers)
    add_header X-XSS-Protection "1; mode=block" always;
    
    # HTTP Strict Transport Security - force HTTPS for 1 year
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    
    # Referrer policy - send referrer only to same origin
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Permissions policy - disable sensitive features
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;

    # =========================================================================
    # PROXY CONFIGURATION
    # =========================================================================
    location / {
        # Backend application server
        proxy_pass http://{{backendHost}}:{{backendPort}};
        
        # Use HTTP/1.1 for upstream connections
        proxy_http_version 1.1;
        
        # =======================================================================
        # PROXY HEADERS
        # =======================================================================
        # Pass the original host header
        proxy_set_header Host $host;
        
        # Pass the real client IP
        proxy_set_header X-Real-IP $remote_addr;
        
        # Append to X-Forwarded-For chain
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        
        # Tell the backend the original protocol (https)
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Original host before proxying
        proxy_set_header X-Forwarded-Host $host;
        
        # Original port
        proxy_set_header X-Forwarded-Port $server_port;
        
        {{#websocketSupport}}
        # =======================================================================
        # WEBSOCKET SUPPORT
        # =======================================================================
        # Required headers for WebSocket upgrade
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        {{/websocketSupport}}
        
        # =======================================================================
        # TIMEOUT SETTINGS
        # =======================================================================
        # Connection timeout to backend
        proxy_connect_timeout 60s;
        
        # Timeout for sending request to backend
        proxy_send_timeout 60s;
        
        # Timeout for reading response from backend
        proxy_read_timeout 60s;
        
        # =======================================================================
        # BUFFERING SETTINGS
        # =======================================================================
        # Enable response buffering
        proxy_buffering on;
        
        # Buffer size for headers
        proxy_buffer_size 4k;
        
        # Number and size of buffers for response body
        proxy_buffers 8 4k;
        
        # Maximum response size to buffer
        proxy_busy_buffers_size 8k;
    }

    # =========================================================================
    # NGINX HEALTH CHECK ENDPOINT
    # =========================================================================
    # Used by monitoring systems to verify this server block is working
    location /nginx-health {
        return 200 'OK';
        add_header Content-Type text/plain;
        access_log off;
    }

    # =========================================================================
    # SECURITY: DENY ACCESS TO HIDDEN FILES
    # =========================================================================
    # Block access to .htaccess, .git, .env, etc.
    location ~ /\. {
        deny all;
        return 404;
    }
}

# =============================================================================
# HTTP TO HTTPS REDIRECT
# =============================================================================
# Redirects all HTTP traffic to HTTPS for security
server {
    listen 80;
    listen [::]:80;
    server_name {{domain}}{{#additionalServerNames}} {{.}}{{/additionalServerNames}};

    # =========================================================================
    # ACME CHALLENGE LOCATION
    # =========================================================================
    # Required for Let's Encrypt HTTP-01 challenge during certificate issuance
    location /.well-known/acme-challenge/ {
        root /var/www/acme;
        try_files $uri =404;
    }

    # =========================================================================
    # REDIRECT ALL OTHER TRAFFIC TO HTTPS
    # =========================================================================
    location / {
        return 301 https://$host$request_uri;
    }
}
